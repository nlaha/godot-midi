{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-godot",
      "type": "shell",
      "command": ".vscode/build-godot.sh"
    },
    {
      "label": "godot-cpp-dir",
      "type": "shell",
      "command": "cd godot-cpp",
      "dependsOn": "build-godot",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "build-godot-cpp",
      "type": "shell",
      "command": "scons target=template_debug dev_build=yes debug_symbols=yes",
      "dependsOrder": "sequence",
      "dependsOn": ["godot-cpp-dir"],
      "presentation": {
        "echo": true,
        "revealProblems": "onProblem",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "top-level-dir",
      "type": "shell",
      "command": "cd ..",
      "dependsOrder": "sequence",
      "dependsOn": ["godot-cpp-dir", "build-godot-cpp"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "initial-build-extension",
      "type": "shell",
      "command": "scons target=template_debug dev_build=yes debug_symbols=yes",
      "dependsOrder": "sequence",
      "dependsOn": ["godot-cpp-dir", "build-godot-cpp", "top-level-dir"],
      "presentation": {
        "echo": true,
        "revealProblems": "onProblem",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-extension",
      "type": "shell",
      "command": "scons target=template_debug",
      "presentation": {
        "echo": true,
        "revealProblems": "onProblem",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
